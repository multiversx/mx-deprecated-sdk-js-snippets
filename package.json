{
  "name": "@multiversx/sdk-snippets",
  "version": "4.0.0",
  "description": "Base library for (mocha-style) Smart Contract interaction snippets. Based on sdk-js. Runnable in VSCode.",
  "main": "out/index.js",
  "types": "out/index.d.js",
  "files": [
    "out/**/*"
  ],
  "scripts": {
    "compile": "tsc -p tsconfig.json && npm run copy-files",
    "pretest": "npm run compile",
    "prepare": "npm run compile",
    "lint": "tslint --project .",
    "copy-files": "npm run copy-abi",
    "copy-abi": "cp src/system/*.json out/system/",
    "mocha-grep": "mocha --grep ${PATTERN}"
  },
  "author": "MultiversX",
  "license": "MIT",
  "dependencies": {
    "@multiversx/sdk-core": "11.2.0",
    "@multiversx/sdk-network-providers": "1.2.1",
    "@multiversx/sdk-wallet": "2.1.3",
    "bignumber.js": "9.0.2"
  },
  "devDependencies": {
    "@types/assert": "1.4.6",
    "@types/chai": "4.2.11",
    "@types/ejs": "3.1.0",
    "@types/mocha": "9.1.0",
    "@types/node": "13.13.2",
    "chai": "4.2.0",
    "mocha": "9.2.2",
    "ts-node": "9.1.1",
    "tslint": "6.1.3",
    "typescript": "4.1.2"
  }
}
